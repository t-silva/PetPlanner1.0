<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/mainScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lnChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/fotoCapa"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:state_hovered="false"
                        />

                    <TextView
                        android:id="@+id/txtNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="5sp"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="0dp"
                        app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24"
                        tools:srcCompat="@drawable/ic_baseline_arrow_drop_down_24" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#ffffff" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtRaca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:text="Vira lata" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:text="●" />

                    <TextView
                        android:id="@+id/txtIdade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:text="4a 8m" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:text="●"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtSexo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0"
                        android:text="Macho" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/atividade"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:text="Veja histórico"
                        android:textAlignment="textEnd"
                        android:textColor="#007aff"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:text=">"
                        android:textAlignment="gravity"
                        android:textColor="#007aff"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#ffffff
" />

                <LinearLayout
                    android:layout_width="396dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="22dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal|center_vertical"
                        android:padding="0dp"
                        android:rotation="270"
                        android:text="07/07"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="143dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnHumor"
                                android:layout_width="79dp"
                                android:layout_height="47dp"
                                android:layout_weight="1"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="3dp"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtHumor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Humor"
                                    android:textColor="#000000"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtHumor_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Excelente"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtTempoAtv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17sp"
                                android:textColor="#ffffff"
                                android:letterSpacing="-0.02"
                                android:lineSpacingExtra="5sp"
                                android:gravity="center"
                                tools:text="30’"
                                android:background="@drawable/group_4"

                                 />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="3dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtAtividade"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Atividade Física"
                                    android:textColor="#000000"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtAtividade_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="TextView"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="138dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgUrina"
                                android:layout_width="79dp"
                                android:layout_height="47dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/group_2"
                                tools:srcCompat="@drawable/group_2" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="3dp"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtUrina"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Urina"
                                    android:textColor="#000"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtUrina_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Normal"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgFezes"
                                android:layout_width="103dp"
                                android:layout_height="47dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/group8"
                                tools:srcCompat="@drawable/group8" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="3dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtPoop"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Fezes"
                                    android:textColor="#000"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtFezes_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Normal"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="5dp"
                    tools:layout_editor_absoluteY="145dp">


                    <TextView
                        android:id="@+id/txtEventos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Próximos eventos"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textVerTodos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:text="Ver todos"
                        android:textAlignment="textEnd"
                        android:textColor="#007aff"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:text=">"
                        android:textAlignment="gravity"
                        android:textColor="#007aff"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/scrEventos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="1"
                    android:fillViewport="true"
                    android:scrollbars="none">


                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:backgroundTint="#3F51B5"
                        android:backgroundTintMode="screen">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/button11"
                                android:layout_width="172dp"
                                android:layout_height="59dp"
                                android:angle="145"
                                android:background="@drawable/rectangle_copy_15"
                                android:backgroundTintMode="screen"
                                android:centerColor="#0000FF"
                                android:endColor="#00FFFF"
                                android:startColor="#FFFFFF"
                                android:text="Day Care"
                                android:textColor="#FFFFFF" />

                            <Button
                                android:id="@+id/button17"
                                android:layout_width="172dp"
                                android:layout_height="59dp"
                                android:background="@drawable/group_7_3"
                                android:backgroundTintMode="screen"
                                android:fromDegrees="90"
                                android:pivotX="50%"
                                android:pivotY="50%"
                                android:text="Button"
                                android:textColor="#fff"
                                android:toDegrees="90" />

                            <Button
                                android:id="@+id/button18"
                                android:layout_width="172dp"
                                android:layout_height="59dp"
                                android:background="@drawable/group_7_2"
                                android:backgroundTintMode="screen"
                                android:text="Button"
                                android:textColor="#fff" />

                        </TableRow>

                    </TableLayout>
                </HorizontalScrollView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="5dp"
                    tools:layout_editor_absoluteY="145dp">

                    <TextView
                        android:id="@+id/txtTratamentos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Profilaxia e tratamentos"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textFicha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:text="Ficha Médica"
                        android:textAlignment="textEnd"
                        android:textColor="#007aff"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:text=">"
                        android:textAlignment="gravity"
                        android:textColor="#007aff"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/group_7_4"
                    android:backgroundTintMode="screen"
                    android:centerColor="#0000FF"
                    android:endColor="#00FFFF"
                    android:startColor="#FFFFFF"
                    android:text="Day Care"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/group_5"
                    android:backgroundTintMode="screen"
                    android:centerColor="#0000FF"
                    android:endColor="#00FFFF"
                    android:startColor="#FFFFFF"
                    android:text="Day Care"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btn"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rectangle_add"
                    android:backgroundTintMode="screen"
                    android:centerColor="#0000FF"
                    android:endColor="#00FFFF"
                    android:startColor="#FFFFFF"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />
            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>