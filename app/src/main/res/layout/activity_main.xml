                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnHumor"
                                android:layout_width="52dp"
                                android:layout_height="47dp"
                                android:background="@drawable/add_custom"
                                 />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="3dp"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtHumor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/humor"
                                    android:textColor="#000000"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtHumor_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgUrina"
                                android:layout_width="52dp"
                                android:layout_height="47dp"

                                android:background="@drawable/group_2"
                                tools:srcCompat="@drawable/group_2" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="3dp"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtUrina"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Urina"
                                    android:textColor="#000"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtUrina_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Normal"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnFood"
                                android:layout_width="52dp"
                                android:layout_height="47dp"
                                android:background="@drawable/group_food"
                                 />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="3dp"

                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtFood"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/alimentacao"
                                    android:textColor="#000000"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtFood_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="200g"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtTempoAtv"
                                android:layout_width="52dp"
                                android:layout_height="47dp"
                                android:background="@drawable/group_4"
                                android:gravity="center"
                                android:letterSpacing="-0.02"
                                android:lineSpacingExtra="5sp"
                                android:textColor="#ffffff"
                                android:textSize="17sp"
                                tools:text="30’"

                                />

                            <LinearLayout
                                android:layout_width="84dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtAtividade"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Atividade Física"
                                    android:textColor="#000000"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtAtividade_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="TextView"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgFezes"
                                android:layout_width="52dp"
                                android:layout_height="47dp"

                                app:srcCompat="@drawable/group8"
                                tools:srcCompat="@drawable/group8" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="3dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtPoop"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Fezes"
                                    android:textColor="#000"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtFezes_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Normal"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnWater"
                                android:layout_width="52dp"
                                android:layout_height="47dp"
                                android:background="@drawable/group_water"
                                 />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="3dp"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtWater"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/water"
                                    android:textColor="#000000"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtWater_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tomou"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="5dp"
                    tools:layout_editor_absoluteY="145dp">


                    <TextView
                        android:id="@+id/txtEventos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Próximos eventos"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textVerTodos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:text="Ver todos"
                        android:textAlignment="textEnd"
                        android:textColor="#007aff"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:text=">"
                        android:textAlignment="gravity"
                        android:textColor="#007aff"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/scrEventos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="1"
                    android:fillViewport="true"
                    android:scrollbars="none">


                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:backgroundTint="#3F51B5"
                        android:backgroundTintMode="screen">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/lnButton1"
                                android:orientation="horizontal"
                                android:layout_width="172dp"
                                android:layout_height="59dp"
                                android:background="@drawable/group_7"
                                android:text="Day Care"
                                android:textColor="#FFFFFF">

                                <LinearLayout
                                    android:layout_width="93dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="11dp"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:letterSpacing="-0.02"
                                        android:lineSpacingExtra="10sp"
                                        android:textColor="#ffffff"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:text="Day Care" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:letterSpacing="0.01"
                                        android:lineSpacingExtra="2sp"
                                        android:textStyle="italic"
                                        android:textColor="#ffffff"
                                        android:textSize="11sp"
                                        android:text="Escola do Latir" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="57dp"
                                    android:layout_height="53dp"
                                    android:gravity="bottom|right"
                                    android:letterSpacing="0.01"
                                    android:lineSpacingExtra="-3sp"
                                    android:text="06/jul"
                                    android:textAlignment="textEnd"
                                    android:textColor="#ffffff"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lnButton2"
                                android:orientation="horizontal"
                                android:layout_width="172dp"
                                android:layout_height="59dp"
                                android:background="@drawable/group_7_3"
                                android:text="Day Care"
                                android:textColor="#FFFFFF">

                                <LinearLayout
                                    android:layout_width="93dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="11dp"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:letterSpacing="-0.02"
                                        android:lineSpacingExtra="10sp"
                                        android:textColor="#ffffff"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:text="Vermífugo" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:letterSpacing="0.01"
                                        android:lineSpacingExtra="2sp"
                                        android:textStyle="italic"
                                        android:textColor="#ffffff"
                                        android:textSize="11sp"
                                        android:text="Drontal" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="57dp"
                                    android:layout_height="53dp"
                                    android:gravity="bottom|right"
                                    android:letterSpacing="0.01"
                                    android:lineSpacingExtra="-3sp"
                                    android:textColor="#ffffff"
                                    android:textSize="16sp"
                                    android:text="06/jul" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lnButton3"
                                android:orientation="horizontal"
                                android:layout_width="172dp"
                                android:layout_height="59dp"
                                android:background="@drawable/group_7_2"
                                android:text="Day Care"
                                android:textColor="#FFFFFF">

                                <LinearLayout
                                    android:layout_width="93dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="11dp"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:letterSpacing="-0.02"
                                        android:lineSpacingExtra="10sp"
                                        android:textColor="#ffffff"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:text="Banho" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:letterSpacing="0.01"
                                        android:lineSpacingExtra="2sp"
                                        android:textStyle="italic"
                                        android:textColor="#ffffff"
                                        android:textSize="11sp"
                                        android:text="Petz" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="57dp"
                                    android:layout_height="53dp"
                                    android:gravity="bottom|right"
                                    android:letterSpacing="0.01"
                                    android:lineSpacingExtra="-3sp"
                                    android:textColor="#ffffff"
                                    android:textSize="16sp"
                                    android:text="09/jul" />
                            </LinearLayout>

                        </TableRow>

                    </TableLayout>
                </HorizontalScrollView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="5dp"
                    tools:layout_editor_absoluteY="145dp">

                    <TextView
                        android:id="@+id/txtTratamentos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Profilaxia e tratamentos"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textFicha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:text="Ficha Médica"
                        android:textAlignment="textEnd"
                        android:textColor="#007aff"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:text=">"
                        android:textAlignment="gravity"
                        android:textColor="#007aff"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/lnProf1"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/group_7_4"
                    android:backgroundTintMode="screen"
                    android:centerColor="#0000FF"
                    android:endColor="#00FFFF"
                    android:startColor="#FFFFFF"
                    android:text="Day Care"
                    android:textColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="47dp"
                        android:layout_gravity="center_horizontal|fill_horizontal|center_vertical"
                        android:layout_marginStart="102dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.02"
                            android:lineSpacingExtra="5sp"
                            android:text="Antipulgas"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
